{% extends "base.jinja" %}

{% block content %}
<form action="" method="post">

<h4>Register Now</h4>
{{ form.hidden_tag() }}
<p>
    {{ form.username.label }}
    {{ form.username(size=35) }}
</p>
<p>
    {{ form.email.label }}
    {{ form.email(size=35) }}
    {% for error in form.email.errors %}
        <span>{{ error }}</span>
    {% endfor %}
</p>
<p>
    {{ form.password.label }}
    {{ form.password(size=35) }}
    {% for error in form.password.errors %}
        <span>{{ error }}</span>
    {% endfor %}
</p>
<p>{{ form.submit() }}</p>
</form>
{% endblock %}